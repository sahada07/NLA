{
  "info": {
    "_postman_id": "nla-api-collection-001",
    "name": "NLA API - Quick Collection",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Small Postman collection for NLA project â€” import to test the main endpoints.\nSet `base_url` (default http://localhost:8000) and `access_token` after obtaining one."
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000",
      "type": "string"
    },
    {
      "key": "access_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "draw_id",
      "value": "1",
      "type": "string"
    },
    {
      "key": "bet_id",
      "value": "1",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Auth - Get Token",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"username\": \"testuser\", \"password\": \"password\"}"
        },
        "url": {
          "raw": "{{base_url}}/api/token/",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api", "token", ""
          ]
        }
      },
      "response": []
    },
    {
      "name": "Auth - Refresh Token",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": { "mode": "raw", "raw": "{\"refresh\": \"<REFRESH_TOKEN>\"}" },
        "url": { "raw": "{{base_url}}/api/token/refresh/", "host": ["{{base_url}}"], "path": ["api","token","refresh",""] }
      }
    },
    {
      "name": "Game Types - List",
      "request": {
        "method": "GET",
        "header": [],
        "url": { "raw": "{{base_url}}/api/games-types/", "host": ["{{base_url}}"], "path": ["api","games-types",""] }
      }
    },
    {
      "name": "Draws - List (upcoming)",
      "request": {
        "method": "GET",
        "header": [],
        "url": { "raw": "{{base_url}}/api/draws/?upcoming=true", "host": ["{{base_url}}"], "path": ["api","draws",""], "query": [{"key":"upcoming","value":"true"}] }
      }
    },
    {
      "name": "Draws - Open",
      "request": {
        "method": "GET",
        "header": [],
        "url": { "raw": "{{base_url}}/api/draws/open/", "host": ["{{base_url}}"], "path": ["api","draws","open",""] }
      }
    },
    {
      "name": "Draw - Results",
      "request": {
        "method": "GET",
        "header": [],
        "url": { "raw": "{{base_url}}/api/draws/{{draw_id}}/results/", "host": ["{{base_url}}"], "path": ["api","draws","{{draw_id}}","results",""] }
      }
    },
    {
      "name": "Subscriptions - Toggle",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{access_token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"game_type_id\": 1, \"subscribe\": true}"
        },
        "url": { "raw": "{{base_url}}/api/subscriptions/toggle_subscription/", "host": ["{{base_url}}"], "path": ["api","subscriptions","toggle_subscription",""] }
      }
    },
    {
      "name": "Notifications - List",
      "request": {
        "method": "GET",
        "header": [ { "key": "Authorization", "value": "Bearer {{access_token}}" } ],
        "url": { "raw": "{{base_url}}/api/notifications/", "host": ["{{base_url}}"], "path": ["api","notifications",""] }
      }
    },
    {
      "name": "Bets - List (user)",
      "request": {
        "method": "GET",
        "header": [ { "key": "Authorization", "value": "Bearer {{access_token}}" } ],
        "url": { "raw": "{{base_url}}/api/bets/", "host": ["{{base_url}}"], "path": ["api","bets",""] }
      }
    },
    {
      "name": "Bets - Place Bet",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{access_token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"draw_id\": {{draw_id}},\n  \"bet_type_id\": 1,\n  \"selected_numbers\": [1,2,3,4,5],\n  \"stake_amount\": \"1.00\"\n}"
        },
        "url": { "raw": "{{base_url}}/api/bets/", "host": ["{{base_url}}"], "path": ["api","bets",""] }
      }
    },
    {
      "name": "Bets - Check Result",
      "request": {
        "method": "GET",
        "header": [ { "key": "Authorization", "value": "Bearer {{access_token}}" } ],
        "url": { "raw": "{{base_url}}/api/bets/{{bet_id}}/check_result/", "host": ["{{base_url}}"], "path": ["api","bets","{{bet_id}}","check_result",""] }
      }
    }
  ]
}
